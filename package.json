{
  "name": "scss-variables-completion",
  "displayName": "SCSS Variables Completion",
  "description": "Provides autocompletion for SCSS variables from a JSON file with design system integration",
  "version": "0.1.87",
  "publisher": "utk09-NCL",
  "repository": "https://github.com/utk09-NCL/scss-variables-completion",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "scss",
    "css",
    "design-system",
    "variables",
    "autocomplete"
  ],
  "activationEvents": [
    "onLanguage:scss",
    "onLanguage:css"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "SCSS Variables",
      "properties": {
        "scssVariables.configPath": {
          "type": "string",
          "default": "scssVariables.json",
          "description": "Relative path to the JSON configuration file"
        },
        "scssVariables.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Logging verbosity level"
        },
        "scssVariables.excludedFolders": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            "dist",
            "build"
          ],
          "description": "Folders to exclude from scanning"
        },
        "scssVariables.validationPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional paths for SCSS validation against the JSON configuration"
        },
        "scssVariables.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation and problem reporting"
        }
      }
    },
    "commands": [
      {
        "command": "scssVariables.refresh",
        "title": "Refresh Variables",
        "category": "SCSS Variables"
      },
      {
        "command": "scssVariables.showOverview",
        "title": "Show Variables Overview",
        "category": "SCSS Variables"
      },
      {
        "command": "scssVariables.openConfig",
        "title": "Open Configuration File",
        "category": "SCSS Variables"
      },
      {
        "command": "scssVariables.validateJson",
        "title": "Validate JSON Configuration",
        "category": "SCSS Variables"
      },
      {
        "command": "scssVariables.checkUnused",
        "title": "Check Unused JSON Variables",
        "category": "SCSS Variables"
      }
    ],
    "languages": [
      {
        "id": "scss",
        "extensions": [
          ".scss",
          ".module.scss"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "ajv": "^8.12.0"
  }
}